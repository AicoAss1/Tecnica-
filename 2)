def count_a_in_string(s):

    count = s.lower().count('a')
    if count > 0:
        return f"A letra 'a' aparece {count} vez(es) na string."
    else:
        return "A letra 'a' não aparece na string."

texto = input("Digite uma string para verificar a presença de 'a': ")
print(count_a_in_string(texto))
